<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AD1A22"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/aa"
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:background="#AD1A22" >

            <!-- android:background="#ff495a" -->

            <TextView
                android:id="@+id/reg_back_bt"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:background="@drawable/map_bg_selector"
                android:clickable="true"
                android:drawableLeft="@drawable/icon_left_normalwh"
                android:gravity="center_horizontal|center_vertical"
                android:paddingLeft="10dip"
                android:text="福利++"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/code"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/map_bg_selector"
                android:clickable="true"
                android:gravity="center_horizontal|center_vertical"
                android:text="源码共享"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/aa" >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="13dip" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#AD1A22"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dip"
                            android:paddingLeft="3dip"
                            android:text="1:此软件完全免费，其他抢红包软件的VIP付费功能，本软件默认开通！"
                            android:textColor="#F7ED91"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dip"
                            android:autoLink="phone"
                            android:paddingLeft="3dip"
                            android:text="2:有什么功能需求，我尽全力免费服务!QQ2198977151"
                            android:textColor="#F7ED91"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dip"
                            android:paddingLeft="3dip"
                            android:text="3:微信有时候会屏蔽自动抢红包，不过，我会第一时间提示您更新的！"
                            android:textColor="#F7ED91"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dip"
                            android:paddingLeft="3dip"
                            android:text="4:新年几天有红包福利赠送哟，不见不散！"
                            android:textColor="#F7ED91"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dip"
                            android:paddingLeft="3dip"
                            android:text="5:有效点击一个广告，算1个积分，年后即可您提现，积分越多，兑换成毛爷爷越多,每天积累积累一点段。"
                            android:textColor="#F7ED91"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dip"
                            android:paddingLeft="3dip"
                            android:text="6:有效分享一次算3个积分！"
                            android:textColor="#F7ED91"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dip"
                            android:paddingLeft="3dip"
                            android:text="7:开心最重要,多和亲人朋友叙叙，珍惜身边的人，对女朋友要好好滴，脾气要好，不要对她不好，要让着她！"
                            android:textColor="#F7ED91"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dip"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="1" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/jb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/jb" >
                            </ImageView>

                            <TextView
                                android:id="@+id/jif"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="当前积分:0"
                                android:textColor="#F7ED91" >
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/l1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25"
                            android:background="@drawable/map_bg_selector"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/ic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/hbb" >
                            </ImageView>

                            <TextView
                                android:id="@+id/share"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="获取红包"
                                android:textColor="#F7ED91" >
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/l2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25"
                            android:background="@drawable/map_bg_selector"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/qian"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/qqq" >
                            </ImageView>

                            <TextView
                                android:id="@+id/share"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="提现"
                                android:textColor="#F7ED91" >
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/l3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25"
                            android:background="@drawable/map_bg_selector"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/qian"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_share" >
                            </ImageView>

                            <TextView
                                android:id="@+id/share"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="分享"
                                android:textColor="#F7ED91" >
                            </TextView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </FrameLayout>
    </RelativeLayout>

</LinearLayout>